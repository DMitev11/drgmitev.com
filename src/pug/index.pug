                        li.list-inline-item
                            i.fab.fa-js-square 
                        li.list-inline-item
                            i.fab.fa-react
                        li.list-inline-item
                            i.fab.fa-vuejs
                        
                    h2.mb-5 
                    .subheading.mb-3 Languages
                    ul.list-inline.dev-icons 
                        li.list-inline-item   
                            img.languages-item(src='assets/img/typescript.svg', alt='typescript')
                        li.list-inline-item   
