                    .subheading.mb-3 Environments and Build Tools
                    ul.list-inline.dev-icons
                        li.list-inline-item
                            i.fab.fa-node-js  
                        li.list-inline-item   
                            img.languages-item(src='assets/img/LLVM.png', alt='LLVM') 
                        li.list-inline-item   
                            img.languages-item(src='assets/img/cmake.png', alt='cmake') 
                        li.list-inline-item
